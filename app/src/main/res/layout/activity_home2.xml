<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/font"
            android:text="Let the"
            android:textColor="@color/black"
            android:textSize="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="journey begin "
            android:fontFamily="@font/font"
            android:id="@+id/headline2"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/headline1"
            android:textSize="80dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:src="@drawable/plane1"
            android:layout_marginLeft="300dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headline2"
            android:layout_marginTop="20dp"
            android:id="@+id/label"
            android:text="Popular >"
            android:textSize="30dp"
            android:fontFamily="@font/font"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_hor_rec"
            android:layout_marginTop="20dp"
            android:id="@+id/label1"
            android:text="Recently booked >"
            android:textSize="30dp"
            android:fontFamily="@font/font"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label"
            android:layout_marginTop="30dp"
            android:id="@+id/home_hor_rec"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_ver_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label1"
            android:layout_marginTop="16dp" />



    </RelativeLayout>


</androidx.core.widget.NestedScrollView>